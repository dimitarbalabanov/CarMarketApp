@model CarMarket.Web.ViewModels.Search.SearchResultViewModel
@{
    ViewData["Title"] = "Search Result";
}

<h1 class="text-center my-text-color mt-4 mb-3">Search Result</h1>
<div class="container mb-5 text-dark align-content-center">
    <hr class="mb-4">
    @foreach (var listing in Model.Listings)
    {
        <div class="card mb-3" style="max-width: 540px;">
            <div class="row no-gutters">
                <div class="col-md-4">
                    @*<img src="@listing.ImageUrl" class="card-img" alt="...">*@
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">@listing.MakeName @listing.ModelName</h5>
                        <p class="card-text">Price: @listing.Price</p>
                        <p class="card-text"><small class="text-muted">Created on: @listing.CreatedOn</small></p>
                        <a class="btn btn-info" asp-controller="Listings" asp-action="Details" asp-route-id="@listing.Id">Details</a>
                    </div>
                </div>
            </div>
        </div>
        <hr class="mb-4">
    }

    @{
        var prevDisabled = !Model.Listings.HasPreviousPage ? "disabled" : "";
        var nextDisabled = !Model.Listings.HasNextPage ? "disabled" : "";
        var paramsDictionary = (Dictionary<string, string>)ViewData["Query"];
    }

    <a asp-action="Result"
       asp-all-route-data="paramsDictionary"
       asp-route-pageNumber="@(Model.Listings.PageIndex - 1)"
       class="btn btn-default @prevDisabled">
        Previous
    </a>
    <a asp-action="Result"
       asp-all-route-data="paramsDictionary"
       asp-route-pageNumber="@(Model.Listings.PageIndex + 1)"
       class="btn btn-default @nextDisabled">
        Next
    </a>
</div>