@using CarMarket.Common
@{
    this.ViewData["Title"] = "Home Page";
}
<div class="my-background-color">
    <div class="container">
        <div class="row align-items-center vh-50 py-5">
            <div class="col-sm-5 mr-auto align-items-center justify-content-center justify-content-lg-end d-flex">
                <img src="~/logo_car.png" class="img-fluid" alt="">
            </div>
            <div class="col-sm-7 ml-auto py-2 text-light text-center text-lg-left">
                <h1 class="mb-0 display-4">
                    <span>Car Market</span>
                </h1>
                <p class="lead mb-3">
                    The best place to sell your car or buy your dream one!
                </p>
                <form class="form mt-2 mt-md-0">
                    <input class="form-control mr-sm-2 mb-1" type="text" placeholder="Make">
                    <input class="form-control mr-sm-2 mb-1" type="text" placeholder="Model">
                    <input class="form-control mr-sm-2 mb-1" type="text" placeholder="Max price">
                    <input class="form-control mr-sm-2 mb-1" type="text" placeholder="Max kilometers">
                    <button class="btn btn-outline-light btn mr-2" type="submit">Quick search</button>
                </form>
            </div>
        </div>
    </div>
</div>