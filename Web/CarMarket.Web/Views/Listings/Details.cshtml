@model CarMarket.Web.ViewModels.Listings.DetailsListingViewModel
@using CarMarket.Data.Models
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Details";
}

<div class="container">

    <h1 class="my-4">
        @Model.MakeName
        <small>@Model.ModelName Price: @Model.Price lv</small>
    </h1>

    <div class="row">

        <div class="col-md-8">
            <div id="carouselControls" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        @*<img src="@Model.ImageUrls[1]" class="d-block w-100" alt="...">*@
                    </div>
                    <div class="carousel-item">
                       @*<img src="@Model.ImageUrls[0]" class="d-block w-100" alt="...">*@
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselControls" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselControls" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>

        <div class="col-md-4">
            <h3 class="my-3">Details</h3>
            <ul>
                <li>Body: @Model.BodyType</li>
                <li>Color: @Model.ColorName</li>
                <li>Condition: @Model.ConditionType</li>
                <li>Fuel: @Model.FuelType</li>
                <li>Horsepower: @Model.Horsepower</li>
                <li>Mileage: @Model.Mileage</li>
                <li>Production year: @Model.ProductionYear</li>
                <li>Transmission: @Model.TransmissionType</li>
                <li>Listing created on: @Model.CreatedOn</li>
            </ul>
            <h3 class="my-3">Description</h3>
            <p>@Model.Description</p>

            <h3 class="my-3">Seller contact information:</h3>
            <p>Name: @Model.SellerFirstName @Model.SellerLastName</p>
            <p>Email: @Model.SellerEmail</p>
        </div>
        <div class="row float-right">
            @if (this.SignInManager.IsSignedIn(this.User))
            {
                if (this.UserManager.GetUserId(this.User) == Model.SellerId)
                {
                    //edit
                    <a class="btn btn-warning" asp-controller="Listing" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
                    
                    <!-- Button trigger modal -->
                    <button type="button" class="btn btn-info" data-toggle="modal" data-target="#modalCenter">
                        Delete
                    </button>

                    <!-- Modal -->
                    <div class="modal fade" id="modalCenter" tabindex="-1" role="dialog" aria-labelledby="modalCenterTitle" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="modalCenterTitle">Modal title</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    Are you sure you want to delete this listing?
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                                    <form class="form-inline" asp-controller="Listing" asp-action="Delete" asp-route-id="@Model.Id">
                                        <button type="submit" class="btn btn-danger">Delete</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    //bookmark
                    <form class="form-inline" asp-controller="Bookmarks" asp-action="Create" asp-route-id="@Model.Id">
                        <button type="submit" class="btn btn-info">Add to bookmarks</button>
                    </form>
                }

            }
        </div>
    </div>

