@model CarMarket.Web.ViewModels.Listings.PersonalViewModel
@{
    ViewData["Title"] = "Personal listings";
}

<h2 class="text-center my-text-color mt-4 mb-3">Your personal listings</h2>
<div class="container mb-5 text-dark">
    <hr class="mb-4">
    @if (Model.Listings.Count() > 0)
    {
        @foreach (var listing in Model.Listings)
        {
            <div class="row justify-content-center">
                <div class="card mb-2 w-75">
                    <div class="row no-gutters">
                        <div class="col-md-4">
                            <img src="@listing.ImageUrl" class="card-img" style=" width: 100%; height: 13vw; object-fit: cover;" alt="...">
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <h5 class="card-title">@listing.MakeName @listing.ModelName</h5>
                                <p class="card-text">Price: @listing.Price</p>
                                <p class="card-text"><small class="text-muted">Created on: @listing.CreatedOn</small></p>
                                <a class="btn btn-info" asp-controller="Listings" asp-action="Details" asp-route-id="@listing.Id">Details</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <hr class="mb-4">
        }
    }
    else
    {
        <h6 class="text-center my-text-color mt-4 mb-3">You haven't created a listing yet.</h6>
    }
</div>
