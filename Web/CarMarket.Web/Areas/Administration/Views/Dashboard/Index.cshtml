@model CarMarket.Web.ViewModels.Administration.Dashboard.DashboardViewModel
@{
    this.ViewData["Title"] = "Admin dashboard";
}

<h2 class="text-center my-text-color mt-4 mb-2">Dashboard</h2>
<div class="container mb-3">
    <div class="row justify-content-center">
        <div class="col-md-8 font-weight-bold my-text-color">
            <hr class="mb-4">
            <p>Total registered users: @Model.UsersCount</p>
            <p>Total posted listings: @Model.ListingsCount</p>
            <hr class="mb-4">
            <a class="btn btn-outline-light my-background-color" asp-action="Users">Browse users</a>
            <a class="btn btn-outline-light my-background-color" asp-action="">Manage makes and models</a>
        </div>
    </div>
</div>
