@model CarMarket.Web.ViewModels.Administration.Users.UsersViewModel
@{
    ViewData["Title"] = "Users";
}

<h2 class="text-center my-text-color mt-4 mb-3">List of users</h2>
<div class="container mb-3">
    <a asp-controller="Dashboard" asp-action="Index" class="btn btn-outline-light my-background-color"><i class="fas fa-backward"></i> Back to dashboard</a>
    <div class="row justify-content-center mt-2">
        <div class="table-responsive">
            <table class="table table-bordered text-center">
                <thead class="thead-light">
                    <tr>
                        <th>
                            User Id
                        </th>
                        <th>
                            Username
                        </th>
                        <th>
                            Registered
                        </th>
                        <th>
                            Total listings
                        </th>
                        <th>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model.Users)
                    {
                        <tr>
                            <td>
                                @user.Id
                            </td>
                            <td>
                                @user.UserName
                            </td>
                            <td>
                                <time datetime="@user.CreatedOn.ToString("O")"></time>
                            </td>
                            <td>
                                @user.ListingsCount
                            </td>
                            <td>
                                <a class="btn btn-outline-light my-background-color" asp-action="Details" asp-route-id="@user.Id">User Details</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
