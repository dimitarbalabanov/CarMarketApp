@model CarMarket.Web.ViewModels.Administration.Makes.CreateMakeInputModel
@{
    ViewData["Title"] = "Create a make";
}

<h2 class="text-center my-text-color mt-4 mb-2">Create a new make</h2>
<div class="container mb-3 text-dark">
    <div class="row justify-content-center">
        <div class="col-md-8 order-md-1 font-weight-bold my-text-color text-center">
            <hr class="mb-3">
            <form asp-action="Create" method="post">
                <div class="row justify-content-center">
                    <div class="col-md-6 mb-3">
                        <div class="form-group mb-3">
                            <label asp-for="@Model.Name">Name</label>
                            <input asp-for="@Model.Name" class="form-control" />
                            <span asp-validation-for="@Model.Name" class="text-info"></span>
                        </div>
                    </div>
                </div>
                <a asp-controller="Makes" asp-action="Index" class="btn btn-outline-light my-background-color">Cancel</a>
                <button class="btn btn-outline-light my-background-color" type="submit">Create</button>
            </form>
        </div>
    </div>
</div>

